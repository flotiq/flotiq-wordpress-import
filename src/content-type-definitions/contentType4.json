{
  "name": "wp_post",
  "label": "WP Post",
  "schemaDefinition": {
    "type": "object",
    "allOf": [
      {
        "$ref": "#/components/schemas/AbstractContentTypeSchemaDefinition"
      },
      {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string",
            "minLength": 1
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DataSource"
            },
            "minItems": 0
          },
          "type": {
            "type": "string"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "author": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DataSource"
            },
            "minItems": 0
          },
          "status": {
            "type": "string",
            "default": "draft",
            "minLength": 1
          },
          "content": {
            "type": "string"
          },
          "created": {
            "type": "string"
          },
          "excerpt": {
            "type": "string"
          },
          "modified": {
            "type": "string"
          },
          "categories": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DataSource"
            },
            "minItems": 0
          },
          "featuredMedia": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DataSource"
            },
            "minItems": 0
          }
        }
      }
    ],
    "required": [
      "title",
      "slug",
      "status"
    ],
    "additionalProperties": false
  },
  "metaDefinition": {
    "order": [
      "title",
      "slug",
      "status",
      "type",
      "created",
      "modified",
      "content",
      "excerpt",
      "author",
      "featuredMedia",
      "tags",
      "categories"
    ],
    "propertiesConfig": {
      "slug": {
        "label": "Slug",
        "unique": true,
        "helpText": "",
        "inputType": "text"
      },
      "tags": {
        "label": "Tags",
        "unique": false,
        "helpText": "",
        "inputType": "datasource",
        "validation": {
          "relationMultiple": true,
          "relationContenttype": "wp_tag"
        }
      },
      "type": {
        "label": "Type",
        "unique": false,
        "helpText": "",
        "inputType": "text"
      },
      "title": {
        "label": "Title",
        "unique": false,
        "helpText": "",
        "inputType": "text",
        "isTitlePart": true
      },
      "author": {
        "label": "Author",
        "unique": false,
        "helpText": "",
        "inputType": "datasource",
        "validation": {
          "relationContenttype": "wp_author"
        }
      },
      "status": {
        "label": "Status",
        "unique": false,
        "options": [
          "draft",
          "publish"
        ],
        "helpText": "",
        "inputType": "select"
      },
      "content": {
        "label": "Content",
        "unique": false,
        "helpText": "",
        "inputType": "richtext"
      },
      "created": {
        "label": "Created",
        "unique": false,
        "helpText": "",
        "inputType": "text"
      },
      "excerpt": {
        "label": "Excerpt",
        "unique": false,
        "helpText": "",
        "inputType": "richtext"
      },
      "modified": {
        "label": "Modified",
        "unique": false,
        "helpText": "",
        "inputType": "text"
      },
      "categories": {
        "label": "Categories",
        "unique": false,
        "helpText": "",
        "inputType": "datasource",
        "validation": {
          "relationMultiple": true,
          "relationContenttype": "wp_category"
        }
      },
      "featuredMedia": {
        "label": "Featured media",
        "unique": false,
        "helpText": "",
        "inputType": "datasource",
        "validation": {
          "relationContenttype": "_media"
        }
      }
    }
  }
}
